<style>
header {
  background: #ffffff; /* solid white background */
  padding: 12px 50px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-radius: 12px;
  width: 100%;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1); /* subtle shadow for depth */
}

.logo {
  font-size: 1.5rem;
  font-weight: 700;
  color: #3498db; /* blue accent */
  margin-right: 30px;
}

nav {
  display: flex;
  align-items: center;
  width: 100%;
}

nav ul {
  list-style: none;
  position: relative;
  right: -20px;
  display: flex;
  gap: 20px;
  flex-grow: 1;
}

nav ul li a {
  color: #34495e; /* dark muted blue */
  text-decoration: none;
  font-size: 1rem;
  font-weight: 500;
  transition: color 0.3s;
}

nav ul li a:hover {
  color: #2980b9; /* bright blue hover */
  
}
</style>
<script>
  const isChrome = /Chrome/.test(navigator.userAgent) &&
          !/Edg/.test(navigator.userAgent) &&
          !/OPR/.test(navigator.userAgent) &&
          !/Brave/.test(navigator.userAgent);
  if (!isChrome) {
    window.stop();
    alert("This webpage only runs on Chrome.");
  }
</script>

<header>
  <nav>
    <div class="logo">Philopater</div>
    <ul>
      <li><a href="/homepage">Home</a></li>
      <li><a href="/about">About Us</a></li>
      <li><a href="/contact">Contact Us</a></li>
      <li><a href="/product">Products</a></li>
      <% if (user && user.isAdmin) { %>
        <li><a href="/dashboard">Dashboard</a></li>
      <% } %>
    </ul>
    <% if (user) { %>
      <a href="/logout" class="sign-in-btn">Logout</a>
    <% } else { %>
      <a href="/signin" class="sign-in-btn">Sign In</a>
    <% } %>
  </nav>
</header>
